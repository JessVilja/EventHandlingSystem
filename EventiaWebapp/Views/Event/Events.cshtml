@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using EventiaWebapp.Services
@inject EventsHandler _event

<style>
    .join-button {
        margin: 1rem;
        box-shadow: 5px 5px 9px -2px rgba(0,0,0,0.43);
    }
</style>

    @{
        ViewBag.Title = "Events";
    }


<div class="accordion" id="accordionExample">
    @foreach(var item in await _event.GetEvents())
    {
        <div class="accordion-item">
            <h2 class="accordion-header d-flex" id="headingOne">
                <button class="accordion-button collapsed display-3" type="button" data-bs-toggle="collapse" data-bs-target="#i-@item.Id" aria-expanded="false" aria-controls="i-@item.Id">
                    @item.Title
                </button>
                <button class="btn btn-primary join-button">Join</button>
            </h2>

            <div id="i-@item.Id" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <h2>@item.Title</h2>
                    <p>@item.Description</p>
                    <p>@item.Place</p>
                    <p>@item.Address</p>
                    <p>@item.Date</p>
                    <p>@item.Spots_available</p>
                </div>
            </div>
        </div>
    }
    
</div>




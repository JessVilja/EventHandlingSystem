@model EventiaWebapp.Models.Event
<style>
    .event-form {
        max-width: 50%;
    }
</style>
<form method="post">
    <div class="container event-form">
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Title:</label>
            <input asp-for="Title" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Title">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Description:</label>
            <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Place:</label>
            <input asp-for="Place" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Place">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Address:</label>
            <textarea asp-for="Address" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <div class="mb-3">
            <label for="exampleDate" class="form-label">Date:</label>
            <input asp-for="Date" type="date" class="form-control" id="start" name="trip-start"
                   value="date"
                   min="2018-01-01" max="2050-12-31">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Spots Available:</label>
            <input asp-for="Spots_available" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Spots available">
        </div>
        <input type="submit"/>
    </div>


</form>

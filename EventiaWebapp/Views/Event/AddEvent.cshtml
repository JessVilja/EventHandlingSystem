@model EventiaWebapp.Models.Event

<form method="post">
    <div class="container">
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Title:</label>
            <input asp-for="Title" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Title">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Event:</label>
            <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="5"></textarea>
        </div>
        <div class="mb-3">
            <label for="exampleDate" class="form-label">Date:</label>
            <input asp-for="Date" type="date" class="form-control" id="start" name="trip-start"
                   value="date"
                   min="2018-01-01" max="2050-12-31">
        </div>
        <input type="submit"/>
    </div>


</form>
